<% content_for :title, "Turbo Navigator" %>

<div class="d-turbo-native-none my-4">
  <h1 class="fs-3 font-monospace">Turbo Navigator</h1>
</div>

<p class="mt-3">This app demos the different navigation patterns included with Turbo Navigator.</p>
<p>Each screen displays information on how to trigger the navigation along with most likely next steps.</p>

<div class="list-group list-group-flush mx-n3 sm:mx-0">
  <%= link_to navigation_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-right fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Basic navigation</p>
      <p class="mb-0 text-muted">Push a screen on the stack.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>

  <%= link_to new_modal_path, class: "list-group-item list-group-item-action d-flex py-3" do %>
    <div class="col flex-grow-0 flex-shrink-1 my-auto ps-1 pe-4">
      <i class="bi bi-arrow-up fs-1"></i>
    </div>

    <div class="w-100 mx-auto">
      <p class="fs-5 mb-0">Modal navigation</p>
      <p class="mb-0 text-muted">Present a modal screen.</p>
    </div>

    <div class="col flex-grow-0 flex-shrink-1 my-auto">
      <i class="bi bi-chevron-right"></i>
    </div>
  <% end %>
</div>

<%= link_to "CRUD example", resources_path, class: "btn btn-outline-primary w-100 mt-5" %>
